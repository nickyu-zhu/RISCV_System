.globl _begin
.globl ecall_handler
.globl extra_handler
.globl keybd_handler
.globl fault_handler
.globl ebrk_handler

#define save_status() 		; \
	addi sp, sp, -132	; \
	sw x1, 4(sp)  		; \
	sw x2, 8(sp) 		; \
	sw x3, 12(sp)  		; \
	sw x4, 16(sp)  		; \
	sw x5, 20(sp)  		; \
	sw x6, 24(sp)  		; \
	sw x7, 28(sp)  		; \
	sw x8, 32(sp)  		; \
	sw x9, 36(sp)  		; \
	sw x10, 40(sp)  	; \
	sw x11, 44(sp)  	; \
	sw x12, 48(sp)  	; \
	sw x13, 52(sp)  	; \
	sw x14, 56(sp)  	; \
	sw x15, 60(sp)  	; \
	sw x16, 64(sp)  	; \
	sw x17, 68(sp)  	; \
	sw x18, 72(sp)  	; \
	sw x19, 76(sp)  	; \
	sw x20, 80(sp)  	; \
	sw x21, 84(sp)  	; \
	sw x22, 88(sp)  	; \
	sw x23, 92(sp)  	; \
	sw x24, 96(sp)  	; \
	sw x25, 100(sp)  	; \
	sw x26, 104(sp)  	; \
	sw x27, 108(sp)  	; \
	sw x28, 112(sp)  	; \
	sw x29, 116(sp)  	; \
	sw x30, 120(sp)  	; \
	sw x31, 124(sp) 

#define restore_status() 	; \
	lw x1, 4(sp)  		; \
	lw x2, 8(sp) 		; \
	lw x3, 12(sp)  		; \
	lw x4, 16(sp)  		; \
	lw x5, 20(sp)  		; \
	lw x6, 24(sp)  		; \
	lw x7, 28(sp)  		; \
	lw x8, 32(sp)  		; \
	lw x9, 36(sp)  		; \
	lw x10, 40(sp)  	; \
	lw x11, 44(sp)  	; \
	lw x12, 48(sp)  	; \
	lw x13, 52(sp)  	; \
	lw x14, 56(sp)  	; \
	lw x15, 60(sp)  	; \
	lw x16, 64(sp)  	; \
	lw x17, 68(sp)  	; \
	lw x18, 72(sp)  	; \
	lw x19, 76(sp)  	; \
	lw x20, 80(sp)  	; \
	lw x21, 84(sp)  	; \
	lw x22, 88(sp)  	; \
	lw x23, 92(sp)  	; \
	lw x24, 96(sp)  	; \
	lw x25, 100(sp)  	; \
	lw x26, 104(sp)  	; \
	lw x27, 108(sp)  	; \
	lw x28, 112(sp)  	; \
	lw x29, 116(sp)  	; \
	lw x30, 120(sp)  	; \
	lw x31, 124(sp) 	; \
	addi sp, sp, 132
	
_begin:
	li sp, 0x00ff3ffc
	// prepare for stack

	la x1, trap_entry
	csrw mtvec, x1
	// prepare for interrupt
	
	csrsi mie, 4
	// enable keyboard interrupt

	csrsi mstatus, 1
	// global enable interrupt
	
	jal  main
	// go to entry
loop:	
	j loop

trap_entry:
	j ecall_handler_entry
	j extra_handler_entry
	j keybd_handler_entry
	j fault_handler_entry
	j ebrk_handler_entry

ecall_handler_entry:
	//save_status()
	call ecall_handler
	//restore_status()
	mret

extra_handler_entry:
	//save_status()	
	call extra_handler
	//restore_status()
	mret
	
keybd_handler_entry:
	save_status()		
	call keybd_handler
	restore_status()
	mret

fault_handler_entry:
	//save_status()
	call fault_handler
	//restore_status()
	mret
	
ebrk_handler_entry:
	//save_status()
	call ebrk_handler
	//restore_status()
	mret
